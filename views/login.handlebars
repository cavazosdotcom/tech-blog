<div class="card">
  <h2 class="card-header bg-light-dark">Login</h2>
  <div class="card-body">
    <form class="login-form">
      <div class="mt-3">
        <label for="name-login" class="form-label">name:</label>
        <input class="form-control" type="text" id="name-login" />
      </div>
      <div class="mt-3">
        <label for="password-login" class="form-label">password:</label>
        <input class="form-control" type="password" id="password-login" />
      </div>
      <div class="mt-3">
        <button class="btn btn-primary" type="submit">Log In</button>
      </div>
    </form>
    <a href="/register">Or, sign up!</a>
  </div>
</div>

<script src="./js/login.js"></script>