<div class="card">
    <h2 class="card-header bg-yellow">Sign Up!</h2>
    <div class="card-body">
        <form class="signup-form">
        <div class="mt-3">
            <label for="name-signup" class="form-label">Username:</label>
            <input class="form-control" type="text" id="name-signup" />
        </div>
        <div class="mt-3">
            <label for="password-signup" class="form-label">Password:</label>
            <input class="form-control" type="password" id="password-signup" />
        </div>
        <div class="mt-3">
            <button class="btn btn-style" type="submit">Register</button>
            <button class="btn btn-style"><a class="btn-anchor" href="/login">Go to Login!</a></button>
        </div>
        </form>
    </div>
</div>

<script src="./js/register.js"></script>