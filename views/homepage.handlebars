<div>
  <h1 class="bg-secondary p-5 text-center">Tech Blog</h1>
</div>

{{#each posts as |post|}}
  <div class="row justify-content-center">
    <div class="col-md-9 py-1">
      <a href="posts/{{post.id}}/comments"> 
        <div class="card h-100 shadow">
          <h2 class="card-header">{{post.title}}</h2>
          <div class="card-body">
            {{post.content}}
          </div>
        </div>  
      </a> 
    </div>
  </div>
{{/each}}