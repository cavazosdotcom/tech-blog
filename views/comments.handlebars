<div>
  <h1 class="bg-danger p-5 text-center">Tech Blog</h1>
</div>

{{!-- {{#each posts as |post|}} --}}
  <div class="row justify-content-center">
    <div class="col-md-9 py-1">
      
      <div class="card h-100 shadow">
        <h2 class="card-header">{{post.title}}</h2>
        <div class="card-body">
          <p>{{post.content}}</p>
          <div class="mb-0 d-flex justify-content-between">
            <p class="mb-0">- {{post.user.name}}</p>
            <p class="mb-0">{{format_date post.date}}</p>
          </div>
          {{!-- {{post.date}} --}}
        </div>

        {{#each comments as |comment|}}
        {{!-- <div class="card h-100 shadow"> --}}
          <div class="card-body">
            <div class="border-start border-3">
              <p class="ms-5">{{comment.content}}</p>
              <div class="mb-0 d-flex justify-content-between">
                <p class="ms-5 mb-0">- {{comment.user.name}}</p>
                <p class="ms-5 mb-0">{{format_date comment.date}}</p>
              </div>
            </div>
          </div>
        {{!-- </div> --}}
        {{/each}}

      </div>  


    </div>
  </div>
  <div class="card col-md-9 mx-auto text-center">
  <div class='card-body'>
    <form id='create-comment' data-id="{{post.id}}">
      <div class='mb-3'>
        <label for='content' class='form-label'>Create New Comment</label>
        <textarea class='form-control' id='comment-content' rows='3'></textarea>
      </div>

      <div class='d-grid gap-2'>
        <button type='submit' class='btn btn-primary'>Create</button>
      </div>
    </form>
  </div>

<script src="/js/create-comment.js"></script>
